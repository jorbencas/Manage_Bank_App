<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <!--<corners android:radius="@dimen/button_corner_radius"/>-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <stroke android:color="@android:color/darker_gray" android:width="@dimen/button_stroke_width"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_focused"/>
            <corners android:radius="@dimen/button_corner_radius"/>
            <stroke android:color="@android:color/darker_gray" android:width="@dimen/button_stroke_width"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <corners android:radius="@dimen/button_corner_radius"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <stroke android:color="@android:color/white" android:width="@dimen/button_stroke_width"/>
        </shape>
    </item>
</selector>