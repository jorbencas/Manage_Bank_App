<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="normal_button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_button_color</item>
    </style>

    <!--Version de estilos Mobil-->

    <!--Vertical screen-->
    <style name="dashboard_button_vertical_mobile" parent="@style/normal_button">
        <item name="android:layout_width">142dp</item>
        <item name="android:layout_height">129dp</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:drawablePadding">@dimen/button_drawable_padding</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="normal_button_two_vertical_mobile" parent="@style/normal_button">
        <item name="android:layout_width">116dp</item>
        <item name="android:layout_height">29dp</item>
